<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="yes" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="/stylesheets/mobile-angular-ui-base.css" />
    <link rel="stylesheet" href="/stylesheets/skeleton.css" />
  </head>
  <body data-ng-app="lookbookApp" data-ng-controller="MainController">
    <!-- Sidebars -->
    <nav ng-include="'/templates/sidebar.html'" ui-track-as-search-param='true' class="sidebar sidebar-left"></nav>
    <div class="app" ng-swipe-right='Ui.turnOn("uiSidebarLeft")' ng-swipe-left='Ui.turnOff("uiSidebarLeft")'>
      <!-- Navbars -->
      <header class="navbar navbar-app navbar-fixed-top">
        <div class="navbar-brand navbar-brand-center" ui-yield-to="title">
          <a href="#/" id="logo">
            <img src="/images/logo.png">
          </a>
        </div>
        <div class="btn-group pull-left">
          <div ui-toggle="uiSidebarLeft" class="btn sidebar-toggle">
            <i class="fa fa-bars font-26"></i>
          </div>
        </div>
      </header>
      <!-- App Body -->
      <div class="app-body" ng-class="{loading: loading}">
        <div ng-show="loading" class="app-content-loading">
          <i class="fa fa-spinner fa-spin loading-spinner"></i>
        </div>
        <div class="app-content">
          <div class="scrollable-content">
            <div class="clearfix"></div>
            <ng-view class="main-view col-xs-9"></ng-view>
          </div>
        </div>
      </div>
    </div><!-- ~ .app -->
    <div ui-yield-to="modals"></div>

    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="/javascripts/vendor/angular.min.js" type="text/javascript"></script>
    <script src="/javascripts/vendor/angular-route.min.js" type="text/javascript"></script>
    <script src="/javascripts/vendor/mobile-angular-ui.min.js"></script>
    <!-- Required to use $swipe, $drag and Translate services -->
    <script src="/javascripts/vendor/mobile-angular-ui.gestures.min.js"></script>
    <script src="/javascripts/app.js" type="text/javascript"></script>
    <!-- Controllers -->
    <script src="/javascripts/controllers/MainUICtrl.js" type="text/javascript"></script>
    <script src="/javascripts/controllers/MenuUIController.js" type="text/javascript"></script>
    <script src="/javascripts/controllers/HomeUIController.js" type="text/javascript"></script>
    <!-- Directives -->
    <script src="/javascripts/directives/templateUIDirective.js" type="text/javascript"></script>
    <script src="/javascripts/directives/tooltipUIDirective.js" type="text/javascript"></script>
    <!-- Factories -->
    <script src="/javascripts/factories/MenuUIFactory.js" type="text/javascript"></script>
  </body>
</html>